function db(str)
 add(gs.db,str)
end

function printdb(col)
 cursor(0,0)
 color(col)
 
 for d in all(gs.db) do
  print(d)
 end
end

-- linear algebra stuff
function vec2(x,y)
 return {
  x=x,
  y=y,
  
  len=function(self)
   return sqrt(x^2+y^2)
  end,
  
  norm=function(self)
   local len=self:len()
   self.x/=len
   self.y/=len
   return self
  end
 }
end
