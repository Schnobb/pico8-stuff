-- classes
function anim(f,delay,flpx,flpy)
 return {
  f=f,
  delay=delay,
  flpx=flpx or false,
  flpy=flpy or false
 }
end

function win(x,y,w,h)
 local win={
  x=x,
  y=y,
  w=w,
  h=h,
  
  draw=function(self)
   local w,h=self.w,self.h
   local sprite,sx,sy=80,0,0
   
  	for x=0,w-1 do
  	 sx=0
 	  if x>0 and x<w-1 then
 	   sx=1
 	  elseif x>=w-1 then
 	   sx=2
 	  end
 	  
  	 for y=0,h-1 do
  	  sy=0
  	  if y>0 and y<h-1 then
  	   sy=1
  	  elseif y>=h-1 then
  	   sy=2
  	  end
  	  
  	  local sp=sprite+sx+sy*16
  	  spr(sp,self.x+x*8,self.y+y*8)
  	 end
  	end
  end,
  
  close=function(self)
   del(gs.windows,self)
  end
 }
 
 add(gs.windows,win)
 return win
end
