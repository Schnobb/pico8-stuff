function _init()
	gs={
		tick=0,
		maxtick=60,
		speed=2,
		
		width=10,
		height=20,
		
		backcolor=0
	}
	
	gs.grid={}
	
	for y=0,gs.height do
		gs.grid[y]={}
		
	 for x=0,gs.width do
	  gs.grid[y][x]=1
	 end
	end
	
	gs.grid[0][5]=14
end

function _update60()
	gs.tick+=gs.speed
	if gs.tick>=gs.maxtick then
	 gs.tick=0
	 gametick()
	end
end

function _draw()
 cls(0)
 
 for y,row in pairs(gs.grid) do
 	for x,cell in pairs(row) do
 		pset(x,y,cell)
 	end
 end
end
-->8
function gametick()
 for y,row in pairs(gs.grid) do
  for x=#row-1,0 do
   local cell=row[x]
   if cell>1 and y<gs.height then
    gs.grid[y][x]=1
    gs.grid[y+1][x]=cell
   end
  end
 end
end
