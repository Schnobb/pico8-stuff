-- updates
function update_game()
 update_timers()
 handle_game_inputs()
 
 if not gs.game_over and not gs.won then
  eval_state()
  gs.ticks+=1
 end
end

function update_menu()
 update_timers()
 handle_menu_inputs()
 
 gs.ticks+=1
end

function handle_game_inputs()
 if gs.game_over or gs.won then
  if btnp(‚ùé) then
   init_game()
  end
  
  return
 end

 if btnp(‚¨ÜÔ∏è) then
  gs.cur_y-=1
  sfx(0)
 end
 
 if btnp(‚¨áÔ∏è) then
  gs.cur_y+=1
  sfx(0)
 end
 
 if btnp(‚û°Ô∏è) then
  gs.cur_x+=1
  sfx(0)
 end
 
 if btnp(‚¨ÖÔ∏è) then
  gs.cur_x-=1
  sfx(0)
 end
 
 gs.cur_x=gs.cur_x%gs.w
 gs.cur_y=gs.cur_y%gs.h
 
 if btnp(‚ùé) then
  if not gs.mines_init then
   init_mines(gs.mine_cnt,gs.cur_x,gs.cur_y)
  end
  
  local num=reveal_tile(gs.cur_x, gs.cur_y)
  
  if num==1 then
   sfx(2)
  elseif num>=1 and num<=50 then
   sfx(3)
  elseif num>50 then
   sfx(4)
  end
 end
 
 if btnp(üÖæÔ∏è) then
  flag_tile(gs.cur_x, gs.cur_y)
  sfx(1)
 end
end

function handle_menu_inputs()
 if btnp(‚¨ÖÔ∏è) then
  gs.cur_diff-=1
  gs.cur_diff=(gs.cur_diff-1)%#difficulties
  gs.cur_diff+=1
 end
 
 if btnp(‚û°Ô∏è) then
  gs.cur_diff+=1
  gs.cur_diff=(gs.cur_diff-1)%#difficulties
  gs.cur_diff+=1 
 end
 
 if btnp(‚ùé) then
  init_game()
 end
end

function update_timers()
 if efx.shake_t>0 then
  efx.shake_t-=1
 end
 
 if efx.flash_t>0 then
  efx.flash_t-=1
 end
 
 if efx.strobe_t>0 then
  efx.strobe_t-=1
 end
 
 if gs.cur_timer<0 then
  gs.cur_timer=gs.cur_max_timer
 else
  gs.cur_timer-=1
 end
end
