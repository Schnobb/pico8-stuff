end

function draw_strobe()
 if efx.strobe_t<=0 then
  return
 end
 
 local coli=efx.strobe_t%#efx.strobe_cols
 coli+=1
 
 local col=efx.strobe_cols[coli]
 
 if col<0 then
  return
 end
 
 cls(col)
end

