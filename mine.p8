function new_tile(x,y)
 return {
 	x=x,
 	y=y,
  state=tile_state.hidden,
  mine=false,
  mine_cnt=nil
 }
end

function new_diff(name,mines,col)
 return {
  name=name,
  mines=mines,
  col=col
 }
end
