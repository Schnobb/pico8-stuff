function _init()
 gs={
  tiles={},
  cur_x=0,
  cur_y=0,
  cur_timer=0,
  cur_max_timer=60,
  mine_cnt=0,
  ind_col={},
  mines_init=false,
  mines={},
  game_over=false,
  w=16,
  h=14,
  ticks=0,
  flags=0,
  back_col=0,
  flagged_tiles={},
  won=false,
  hidden_tiles=0,
  mode=game_mode.menu,
  cur_diff=2
 }
 
 gs_debug={
  reveal=false,
  show=false,
  dbg={},
 }
 
 init_ind_col()
 init_diffs()
 init_efx()
end

function _update60()
 gs_debug.dbg={}
 if gs.mode==game_mode.menu then
  update_menu()
 elseif gs.mode==game_mode.game then
  update_game()
 end
end

function _draw()
 if gs.mode==game_mode.menu then
  draw_menu()
 elseif gs.mode==game_mode.game then
  draw_game()
 end
 
 draw_debug()
end

function draw_debug()
 if gs_debug.show then
  color()
  cursor()
  
  for d in all(gs_debug.dbg) do
   print(d)
  end
 end
end
